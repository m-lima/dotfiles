!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
!Xft.hintstyle:              hintslight
Xft.hintstyle:              hintfull
Xft.autohint:               false
*font:                      xft:DejaVu Sans Mono for Powerline:pixelsize=12
!*font:                      xft:Awesome:pixelsize=12
!*font:                      xft:Hack:pixelsize=12

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------

URxvt.geometry:             90x30
URxvt.fading:               0
URxvt.loginShell:           true
URxvt.internalBorder:       0
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           false

! Fix font space
URxvt*letterSpace: -2

! Scrollbar
URxvt.saveLines:            2000
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          firefox

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

!-------------------------------------------------------------------------------
! Rofi
!-------------------------------------------------------------------------------

rofi.modi: run
rofi.font: Hack 11
rofi.width: 100
rofi.lines: 5
rofi.columns: 1
rofi.opacity: 80
rofi.location: 6
!rofi.padding: 100
rofi.fuzzy: false

!                    bg       fg      altbg    hlbg     hlfg
rofi.color-normal: #282828, #ebdbb2, #282828, #ebdbb2, #282828
rofi.color-urgent: #282828, #ebdbb2, #282828, #ebdbb2, #282828
rofi.color-active: #282828, #ebdbb2, #282828, #ebdbb2, #282828
rofi.color-window: #282828, #282828
rofi.bw: 0

!-------------------------------------------------------------------------------
! Transparency
!-------------------------------------------------------------------------------

! OpenGL
*transparent:   false
*background:    [80]#000000

! Fake transparency
!*shading:      20
!*background:   #002b36

